@model IEnumerable<PromotionApp.Edmx.PromotionMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Create")'">Add Product</button>
</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            Product Price
        </th>
        <th>
           Promotion Price
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductMaster.Code)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromotionPrize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductMaster.Code)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
